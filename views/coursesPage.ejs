<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Courses</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <h1>Courses</h1>
        <br>
        <a class="btn btn-primary" href="/login/<%= id %>/courses/add">Add</a>
        <a class="btn btn-primary" href="/login/<%= id %>/courses?filter=your query">Your Courses</a>
        <a class="btn btn-primary" href="/login/<%= id %>/courses">All Courses</a>
        <br>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Course</th>
                    <th>Duration</th>
                    <th>Created From</th>
                    <!-- <th>Creator</th> -->
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((el, i) => { %> 
                    <tr>
                        <th><%= i + 1 %></th>
                        <td><%= el.nameCourse %></td>
                        <td><%= el.duration %></td>
                        <td><%= formatDate(el.createdAt) %></td>
                        <td>
                            <a class="btn btn-primary" href="/login/<%= id %>/courses/<%= el.Admin.id%>/detail/<%= el.id %>">Detail</a>
                            <% if (id === el.AdminId || role === 'Super Admin'){%> 
                            <a class="btn btn-primary" href="/login/<%= id %>/courses/<%= el.id %>/edit">Edit</a>
                            <a class="btn btn-danger" href="/login/<%= id %>/courses/<%= el.id %>/delete">Delete</a>
                            <% } %> 
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
        </table>
    </div>
</body>
</html>